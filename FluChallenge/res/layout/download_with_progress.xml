<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="5dip">
  
  <ImageView android:id="@+id/download_status_icon"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="5dip"
    android:layout_alignParentLeft="true" />
    
  <RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_toRightOf="@id/download_status_icon">
    
    <TextView android:id="@+id/download_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
    <ProgressBar android:id="@+id/download_status_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_status_text"
        android:progressDrawable="@android:drawable/progress_horizontal"
        android:indeterminate="false"
        android:indeterminateOnly="false" />
  </RelativeLayout>
  
</RelativeLayout>
